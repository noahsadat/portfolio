<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSV to PDF Tiles Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">CSV to PDF Tiles Generator</h1>
        <div class="mb-3">
            <label for="csvFile" class="form-label">Upload CSV file:</label>
            <input class="form-control" type="file" id="csvFile" accept=".csv">
        </div>
        <button id="generateBtn" class="btn btn-primary mb-3">Generate PDF Tiles</button>
        <div id="output" class="mt-3"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('generateBtn').addEventListener('click', generatePDFTiles);

        function generatePDFTiles() {
            const fileInput = document.getElementById('csvFile');
            const file = fileInput.files[0];
            
            if (!file) {
                alert('Please select a CSV file first.');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const content = e.target.result;
                const lines = content.split('\n');
                const headers = lines[0].split(',');
                const data = lines.slice(1).map(line => line.split(','));

                const { jsPDF } = window.jspdf;
                let pageCount = 0;

                for (let i = 0; i < data.length; i += 4) {
                    const doc = new jsPDF();
                    pageCount++;

                    const startY = 20;
                    const lineHeight = 10;
                    const pageWidth = doc.internal.pageSize.width;
                    const margin = 10;

                    doc.setFontSize(12);

                    for (let j = 0; j < 4; j++) {
                        const y = startY + j * (lineHeight * 5); // 4 lines of text + 1 line of space
                        if (i + j < data.length) {
                            for (let k = 0; k < 4 && k < headers.length; k++) {
                                const text = `${headers[k]}: ${data[i + j][k]}`;
                                doc.text(text, margin, y + k * lineHeight);
                            }
                        }
                    }

                    // Add a border around the content
                    const endY = startY + 4 * (lineHeight * 5) - lineHeight;
                    doc.rect(margin - 5, startY - 10, pageWidth - 2 * margin + 10, endY - startY + 20);

                    doc.save(`Tile_${pageCount}.pdf`);
                }

                document.getElementById('output').innerHTML = `Generated ${pageCount} PDF file(s).`;
            };
            reader.readAsText(file);
        }
    </script>
</body>
</html>
